<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order">

    <ImageView
        android:id="@+id/drink_detail_image"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:padding="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/apple_juice" />


    <TextView
        android:id="@+id/drink_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="371dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="drinks"
        android:textSize="50dp"

        android:textStyle="bold" />


    <TextView
        android:id="@+id/drink_detail_price"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="268dp"
        android:gravity="center"
        android:text="20000"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="122dp"
        android:layout_marginBottom="267dp"
        android:gravity="center"
        android:text="Rp."
        android:textColor="@color/colorPrimary"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/qtyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="198dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Input Quantity"
        android:inputType="number" />

    <Button
        android:id="@+id/orderBtn"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="122dp"
        android:background="@color/colorAccent"
        android:text="Order"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/orderMoreBtn"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="55dp"
        android:background="@color/colorAccent"
        android:text="Back to Menu"
        android:textColor="@android:color/white" />


</RelativeLayout>